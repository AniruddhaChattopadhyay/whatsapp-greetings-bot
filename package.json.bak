{
  "name": "greetings-bot-whatsapp",
  "version": "1.0.0",
  "description": "Open-source WhatsApp bot for sending personalized greeting messages to multiple contacts",
  "main": "electron/main.cjs",
  "type": "module",
  "bin": {
    "greetings-bot": "./src/cli/index.js"
  },
  "scripts": {
    "cli": "node src/cli/index.js",
    "dev:ui": "vite",
    "dev:electron": "cross-env NODE_ENV=development node electron-start.cjs",
    "dev": "concurrently \"npm run dev:ui\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "build:ui": "vite build",
    "build:electron": "electron-builder",
    "build": "npm run build:ui && npm run build:electron",
    "start": "npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "greetings",
    "bulk-messaging",
    "automation",
    "whatsapp-web"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.16",
    "chalk": "^5.3.0",
    "clsx": "^2.1.1",
    "commander": "^12.0.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.1",
    "inquirer": "^9.2.0",
    "lucide-react": "^0.562.0",
    "node-cron": "^3.0.3",
    "ora": "^8.0.1",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.11.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0",
    "whatsapp-web.js": "^1.23.0",
    "winston": "^3.11.0",
    "zustand": "^5.0.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/greetings-bot-whatsapp.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/greetings-bot-whatsapp/issues"
  },
  "build": {
    "appId": "com.greetingsbot.whatsapp",
    "productName": "WhatsApp Greetings Bot",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "ui/dist/**/*",
      "config/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vite": "^7.3.0",
    "wait-on": "^9.0.3"
  }
}
